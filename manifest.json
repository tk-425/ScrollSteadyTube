{
  "name": "ScrollSteadyTube",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Enjoy theater mode videos that stick as you explore comments and recommendations. No more awkward transitions or cramped screens.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_title": "ScrollSteadyTube",
    "default_popup": "popup.html",
    "default_icon": {
      "64": "images/icon-64.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  }
}
